{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "xe-utils": ["patch/xe-utils.esm"]
    }
  },
  "includes": [
    "env.d.ts",
    "node_modules/element-plus/global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "docs", "example", "test"]
}

{
	"name": "use-scrollbar",
	"version": "1.0.0",
	"private": false,
	"scripts": {
		"clean": "rimraf dist",
		"build": "pnpm clean  && pnpm check:type && vite build",
		"check:type": "vue-tsc --noEmit",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@types/node": "^17.0.45",
		"@types/prettier": "^2.7.2",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"@vitejs/plugin-vue": "^2.3.4",
		"cross-env": "^7.0.3",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.9.0",
		"husky": "^8.0.3",
		"less": "^4.1.3",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.3",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-dts": "^1.7.1",
		"vue": "^3.2.45",
		"vue-eslint-parser": "^9.1.0",
		"vue-tsc": "1.0.9"
	},
	"peerDependencies": {
		"vue": "^3.2.25"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"svelte"
			]
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx,vue}": [
			"eslint --fix"
		]
	},
	"repository": "https://github.com/Lionad-Morotar/use-scrollbar",
	"homepage": "https://github.com/Lionad-Morotar/use-scrollbar",
	"author": "Lionad",
	"license": "MIT",
	"keywords": [
		"scrollbar",
		"virtual",
		"vue3",
		"vue",
		"hook"
	]
}

{
	"name": "use-scrollbars",
	"version": "0.4.3",
	"private": false,
	"main": "./dist/lib/index.cjs.js",
	"module": "./dist/lib/index.esm.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/lib/index.cjs.js",
			"import": "./dist/lib/index.esm.js",
			"types": "./dist/types/index.d.ts"
		},
		"./*": "./*"
	},
	"scripts": {
		"postinstall": "pnpm install xe-utils",
		"dev": "vite ./play",
		"serve": "pnpm dev",
		"clean": "rimraf dist",
		"build": "pnpm clean && vite build",
		"build:watch": "pnpm clean  && pnpm check:types && vite build --watch",
		"check:types": "vue-tsc --noEmit",
		"prepare": "husky install",
		"auto:publish": "git checkout dev | pnpm build | git branch -D release | git checkout -b release | git merge dev | npm version patch | pnpm publish | git push --set-upstream origin release | git checkout dev | git merge release | git push origin dev"
	},
	"dependencies": {
		"@vueuse/core": "^9.13.0",
		"@vueuse/shared": "^9.13.0",
		"vue-demi": "^0.13.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@types/node": "^17.0.45",
		"@types/prettier": "^2.7.2",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"@vitejs/plugin-vue": "^2.3.4",
		"cross-env": "^7.0.3",
		"dayjs": "^1.11.7",
		"element-plus": "^2.2.32",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.9.0",
		"husky": "^8.0.3",
		"less": "^4.1.3",
		"lint-staged": "^13.1.2",
		"mitt": "^3.0.0",
		"postcss": "^8.4.21",
		"postcss-preset-env": "^8.0.1",
		"prettier": "^2.8.4",
		"resize-observer-polyfill": "^1.5.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.5",
		"vite": "^4.1.2",
		"vite-plugin-dts": "^1.7.3",
		"vue": "^3.2.47",
		"vue-eslint-parser": "^9.1.0",
		"vue-tsc": "1.0.9",
		"vue3": "npm:vue@^3.2.47",
		"vxe-table": "4.3.9",
		"xe-utils": "link:patch\\xe-utils-esm"
	},
	"peerDependencies": {
		"vue": "^3"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"svelte"
			]
		}
	},
	"resolutions": {
		"xe-utils": "link:patch\\xe-utils-esm"
	},
	"lint-staged": {
		"*.{js,ts,tsx,vue}": [
			"eslint --fix"
		]
	},
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	},
	"repository": "https://github.com/Lionad-Morotar/use-scrollbar",
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"homepage": "https://github.com/Lionad-Morotar/use-scrollbar",
	"author": "Lionad",
	"license": "MIT",
	"keywords": [
		"scrollbar",
		"virtual",
		"scroll",
		"vue3",
		"vue",
		"hook",
		"directive"
	]
}
